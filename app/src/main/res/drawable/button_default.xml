<!-- button_default.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/purple_200"/> <!-- Green color for default state -->
    <corners android:radius="8dp"/> <!-- Rounded corners for default state -->
    <size android:width="100dp" android:height="100dp"/> <!-- Adjust size as needed -->
    <padding
        android:left="1dp"
        android:top="8dp"
        android:right="23dp"
        android:bottom="222dp" />

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000"/> <!-- Pressed color (Red) -->
                <size android:width="10dp" android:height="100dp"/>
            </shape>
        </rotate>
    </item>
</shape>
