<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000" /> <!-- Pressed color (Red) -->
            <corners android:radius="1dp" /> <!-- Rounded corners for pressed state -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00FF00" /> <!-- Default color (Green) -->
            <corners android:radius="1000dp" /> <!-- Rounded corners for default state -->
        </shape>
    </item>
</selector>
